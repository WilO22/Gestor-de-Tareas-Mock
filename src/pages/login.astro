---
import Layout from '../layouts/Layout.astro';
import Button from '../components/ui/Button.astro';
---

<Layout>
  <div class="flex justify-center items-center h-full">
    <div class="bg-white p-8 rounded-lg shadow-md w-96">
      <h1 class="text-2xl font-bold mb-6 text-center">Iniciar Sesión</h1>
      
      <form>
        <div class="mb-4">
          <label for="email" class="block mb-2">Correo Electrónico</label>
          <input type="email" id="email" class="w-full p-2 border rounded" />
        </div>
        
        <div class="mb-6">
          <label for="password" class="block mb-2">Contraseña</label>
          <input type="password" id="password" class="w-full p-2 border rounded" />
        </div>
        
        <Button href="/dashboard" text="Ingresar" />
      </form>
    </div>
  </div>
</Layout>