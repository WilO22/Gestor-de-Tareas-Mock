---
// src/pages/dashboard.astro

// --- PARTE 1: EL "CEREBRO" ---

// Importamos el Layout, nuestro "marco" para la página.
import Layout from '../layouts/Layout.astro';

// ¡CAMBIO IMPORTANTE! Ahora importamos 'allWorkspaces', que es la LISTA.
import { allWorkspaces } from '../data/mock-workspace';
---
<Layout title="Dashboard de Proyectos">
  <main class="p-8">
    <h1 class="text-3xl font-bold mb-6">
      Mis Espacios de Trabajo
    </h1>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      {allWorkspaces.map(workspace => (
        <a 
          href={`/workspace/${workspace.id}/boards`} 
          class="block p-4 border rounded-lg shadow-md hover:bg-gray-100 hover:shadow-lg transition-all"
        >
          <h2 class="text-xl font-semibold">{workspace.name}</h2>
          <p class="text-sm text-gray-600">{workspace.boards.length} tableros</p>
        </a>
      ))}
    </div>
  </main>
</Layout>